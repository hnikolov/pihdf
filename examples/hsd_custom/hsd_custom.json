{
    "custom_interfaces":
    [
	{
	    "name": "my_port_fields",
	    "fields":
	    [
		{ "name": "cmd" , "type": "bool(0)"       },
		{ "name": "port", "type": "intbv(0)[16:]" }
	    ]
	},
	{
	    "name": "other_fields",
	    "fields":
	    [
		{ "name": "fld1", "type": "intbv(2, min=-128, max=256)"       },
		{ "name": "fld2", "type": "intbv(0)[8:]" }
	    ]
	}
    ],

    "design":
    {
        "name": "hsd_custom",
        "interfaces":
        [
            { "name": "rst",          "type": "Reset", "active": "1" },
            { "name": "clk",          "type": "Clock"                },
            { "name": "rx_port_flds", "type": "HSD",   "data":"my_port_fields",  "direction": "IN"  },  
            { "name": "tx_port_flds", "type": "HSD",   "data":"my_port_fields",  "direction": "OUT" }  
        ]       
    }
}
